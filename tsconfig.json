{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata", "jest"],
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~app/*": ["./app/*"],
      "~assets/*": ["./assets/*"],
      "~config/*": ["./src/config/*"],
      "~domains/*": ["./src/domains/*"],
      "~gateways/*": ["./src/gateways/*"],
      "~testHelpers/*": ["./src/testHelpers/*"]
    }
  }
}
